@using Kendo.Mvc.UI
@model DoctorPortal.Web.Models.TestimonialViewModel


@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.HospitalId)

<div class="editor-label">
    @Html.LabelFor(m => m.Name)
</div>
<div class="editor-field">
    @Html.TextBoxFor(m => m.Name, new { @class = "k-textbox" })
    @Html.ValidationMessageFor(m => m.Name)
</div>

<div class="editor-label">
    @Html.LabelFor(m => m.Location)
</div>
<div class="editor-field">
    @Html.TextBoxFor(m => m.Location, new { @class = "k-textbox" })
    @Html.ValidationMessageFor(m => m.Location)
</div>

<div class="editor-label">
    @Html.LabelFor(m => m.Message)
</div>
<div class="editor-field">
    @Html.TextBoxFor(m => m.Message, new { @class = "k-textbox" })
    @Html.ValidationMessageFor(m => m.Message)
</div>

