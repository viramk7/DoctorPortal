@model object
    @(Html.Kendo().ComboBoxFor(m => m)
      .DataTextField("IconName")
      .DataValueField("IconName")
      .DataSource(source =>
      {
          source.Read(read =>
          {
              read.Action("GetIconList", "Icons");
          });
      })
     .Height(400)
     .HtmlAttributes(new { @style = "width: 100%" })
     .Template("<img class=\"k-state-default\" src=" + Url.Content("/Content/images/DepartmentIcons/" + "#: data.IconName#.png") + " width=50 height=50 alt='icon'/>" + "<span> #: data.IconName# <span/>"))
    
