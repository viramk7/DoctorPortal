@model DoctorPortal.Web.Areas.Admin.Models.ViewModels.ForgotPasswordViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Forgot Password";
}


<form class="login-form" action="@Url.Action("ForgotPassword","Login")" method="post">
    <div class="card mb-0">
        <div class="card-body">
            <div class="text-center mb-3">
                <i class="icon-spinner11 icon-2x text-warning border-warning border-3 rounded-round p-3 mb-3 mt-1"></i>
                <h5 class="mb-0">Password recovery</h5>
                <span class="d-block text-muted">We'll send you instructions in email</span>
            </div>

            <div class="form-group form-group-feedback form-group-feedback-left">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email)
                <div class="form-control-feedback">
                    <i class="icon-mail5 text-muted"></i>
                </div>
            </div>

            <button type="submit" class="btn bg-blue btn-block"><i class="icon-spinner11 mr-2"></i> Recover Password </button>
            <a class="btn bg-blue btn-block" href="@Url.Action("Index","Login")"><i class="icon-home2 mr-2"></i> Back to Sign In </a>
        </div>
    </div>
</form>


