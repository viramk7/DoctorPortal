@using DoctorPortal.Web.Areas.Admin.Models
@using DoctorPortal.Web.Models
@*@model DoctorPortal.Web.Models.HospitalViewModel*@


<footer class="footer-area">
    <div class="container">
        <div class="row">
            <!--Start single footer widget-->
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="single-footer-widget pd-bottom50">
                    <div class="title">
                        <h3>About Hospitals</h3>
                        <span class="border"></span>
                    </div>
                    <div class="our-info">
                        <p>
                            We are located in prime location of central
                            Ahmedabad just 15 minutes ride away from
                            Ahmedabad International &amp; Domestic Airport, 10
                            minutes ride away from Ahmedabad Railway station
                            and 5 minutes ride away from Paldi Bus station.
                        </p>
                        <p class="mar-top">
                            We are a 5 minutes walk from Gandhigram Metro
                            Station( just next to Stadium Metro Station which is
                            junction of North- South and East- West Metro
                            corridor of Ahmedabad).
                        </p>
                        <a href="@Url.Action("Index","ContactUs")">Know More<i class="fa fa-caret-right" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            <!--End single footer widget-->
            <!--Start single footer widget-->
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="single-footer-widget pd-bottom50">
                    <div class="title">
                        <h3>Usefull Links</h3>
                        <span class="border"></span>
                    </div>
                    <ul class="usefull-links fl-lft">
                        <li><a href="@Url.Action("Index","AboutUs")">About Us</a></li>
                        <li><a href="@Url.Action("Index","Doctor")">Consultants</a></li>
                        <li><a href="@Url.Action("Index","Department")">Departments</a></li>
                    </ul>
                    <ul class="usefull-links">
                        <li><a href="@Url.Action("Index","Testimonial")">Testimonials</a></li>
                        <li><a href="@Url.Action("Index","FAQ")">FAQ’s</a></li>
                    </ul>
                </div>
            </div>
            <!--End single footer widget-->
            <!--Start single footer widget-->
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="single-footer-widget mar-bottom">
                    <div class="title">
                        <h3>Contact Details</h3>
                        <span class="border"></span>
                    </div>
                    <ul class="footer-contact-info">
                        <li>
                            <div class="icon-holder">
                                <span class="flaticon-pin"></span>
                            </div>
                            <div class="text-holder">
                                <h5>
                                    @{
                                        var address1 = string.IsNullOrEmpty(ProjectSession.Hospital.AddressLine1) ? "" : ProjectSession.Hospital.AddressLine1;
                                        address1 += string.IsNullOrEmpty(ProjectSession.Hospital.AddressLine2) ? "" : ",";
                                    }
                                    @address1

                                    <br>
                                    @(string.IsNullOrEmpty(ProjectSession.Hospital.AddressLine2) ? "" : ProjectSession.Hospital.AddressLine2)
                                </h5>
                            </div>
                        </li>
                        <li>
                            <div class="icon-holder">
                                <span class="flaticon-interface"></span>
                            </div>
                            <div class="text-holder">
                                @if (string.IsNullOrEmpty(ProjectSession.Hospital.Email))
                                {
                                    <h5> - </h5>
                                }
                                else
                                {
                                    <h5>@ProjectSession.Hospital.Email</h5>
                                }
                            </div>
                        </li>
                        <li>
                            <div class="icon-holder">
                                <span class="flaticon-technology-1"></span>
                            </div>
                            <div class="text-holder">
                                @if (string.IsNullOrEmpty(ProjectSession.Hospital.ContactNo))
                                {
                                    <h5> - </h5>
                                }
                                else
                                {
                                    <h5>@ProjectSession.Hospital.ContactNo.Replace(", ", " & ")</h5>
                                }

                            </div>
                        </li>
                        <li>
                            <div class="icon-holder">
                                <span class="flaticon-clock"></span>
                            </div>
                            <div class="text-holder">
                                <h5>@ProjectSession.Hospital.WorkingDays : @ProjectSession.Hospital.WorkingHours</h5>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <!--Start single footer widget-->
            <!--Start single footer widget-->
            @{
                Html.RenderPartial("_MakeAppointmentFooter", new MakeAppointmentViewModel());
            }
            <!--End single footer widget-->
        </div>
    </div>
</footer>
<section class="footer-bottom-area">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="copyright-text">
                    <p>Copyrights © @System.DateTime.Now.Year All Rights Reserved, Powered by <a href="#">Anant Hospital.</a></p>
                </div>
            </div>
            @*<div class="col-md-4">
                <ul class="footer-social-links">
                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                </ul>
            </div>*@
        </div>
    </div>
</section>
