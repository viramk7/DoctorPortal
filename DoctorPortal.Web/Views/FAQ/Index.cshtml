<section class="faq-question-form-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="question-form">
                    <div class="sec-title mar0auto text-center">
                        <h1>Ask Your Questions</h1>
                        <span class="border"></span>
                    </div>
                    <div class="form-holder clearfix">
                        <form id="faqform" class="clearfix" name="faq-form" action="@Url.Action("MakeFAQQuestion", "FAQ")" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Name, new { @placeholder = "Your Name" })
                                    @Html.ValidationMessageFor(m => m.Name)
                                    @*<input type="text" name="name" placeholder="Name*" required="">*@
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Your Email" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                    @*<input type="email" name="email" placeholder="Email*" required="">*@
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Subject, new { @placeholder = "Your Subject" })
                                    @Html.ValidationMessageFor(m => m.Subject)
                                    @*<input type="text" name="subject" placeholder="Subject">*@
                                </div>
                                <div class="col-md-6">
                                    @Html.DropDownListFor(m => m.DepartmentId, new SelectList(ProjectSession.Hospital.Departmentlist, "DepartmentId", "DepartmentName"), new { @class = "selectmenu" })
                                    @Html.ValidationMessageFor(m => m.DepartmentId)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    @Html.TextAreaFor(m => m.QuestionText, new { @placeholder = "Your Questions..." })
                                    @Html.ValidationMessageFor(m => m.QuestionText)
                                    @*<textarea name="question" placeholder="Your Questions..."></textarea>*@
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="thm-btn bgclr-1" type="submit">Submit Now</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End faq questions form area-->
