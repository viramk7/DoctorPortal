@using DoctorPortal.Web.Models
@model DoctorPortal.Web.Models.ViewModels.ResetPasswordViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Reset Password";
}

<form class="login-form" action="@Url.Action("ResetPassword","Login")" method="post">
    <div class="card mb-0">
        <div class="card-body">
            <div class="text-center mb-3">
                <h5 class="mb-0">Reset Password</h5>
            </div>

            @if (ProjectSession.LoggedInUser.IsSystemGeneratedPassword)
            {
                <div class="alert alert-warning">
                    <strong>Reset Password!</strong>
                    <p>Please reset your password in order to use the system.</p>
                </div>
            }

            <div class="form-group form-group-feedback form-group-feedback-left">
                @Html.PasswordFor(m => m.OldPassword,
                    new { @class = "form-control", placeholder = "Old Password" })
                @Html.ValidationMessageFor(m => m.OldPassword)
                <div class="form-control-feedback">
                    <i class="icon-lock2 text-muted"></i>
                </div>
            </div>

            <div class="form-group form-group-feedback form-group-feedback-left">
                @Html.PasswordFor(m => m.NewPassword,
                    new { @class = "form-control", placeholder = "New Password" })
                @Html.ValidationMessageFor(m => m.NewPassword)
                <div class="form-control-feedback">
                    <i class="icon-lock2 text-muted"></i>
                </div>
            </div>

            <div class="form-group form-group-feedback form-group-feedback-left">
                @Html.PasswordFor(m => m.ConfirmPassword,
                    new { @class = "form-control", @placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                <div class="form-control-feedback">
                    <i class="icon-lock2 text-muted"></i>
                </div>
            </div>

            <button type="submit" class="btn bg-blue btn-block"><i class="icon-spinner11 mr-2"></i>Reset password</button>
            <span class="form-text text-center text-muted">
                If your password is reset successfully, You'll be logged out and redirected to the login screen.
            </span>
        </div>
    </div>
</form>





